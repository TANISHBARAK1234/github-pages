                <script>
                    const boxTypeSelector = document.getElementById('box-type');
                    const modelViewer = document.getElementById('model-viewer');

                    boxTypeSelector.addEventListener('change', function() {
                        if (boxTypeSelector.value === 'printed') {
                            modelViewer.setAttribute('src', 'https://example.com/printed-box-with-xyzmxwsuchioh.glb');
                        } else {
                            modelViewer.setAttribute('src', 'https://example.com/plain-box.glb');
                        }
